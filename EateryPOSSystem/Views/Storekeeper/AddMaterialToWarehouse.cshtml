@model AddMaterialToWarehouseFormModel

@{
    ViewData["Title"] = "Add Material To Warehouse";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-2 col-xl-8">
        <form method="post">
            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="DocumentNumber">Номер на документ</label>
                    <input asp-for="DocumentNumber" class="form-control">
                </div>
                <div class="form-group col-4">
                    <label asp-for="DocumentTypeId">Тип документ</label>
                    <select class="form-control">
                        @foreach (var docType in Model.DocumentTypes)
                        {
                            <option value="@docType.Id">@docType.Name</option>
                        }
                    </select>
                    <span>
                        <a asp-controller="BaseData" asp-action="AddDocumentType" class="btn btn-sm btn-outline-primary">Добави нов тип документ</a>
                    </span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="DocumentDate">Дата на документ</label>
                    <input asp-for="DocumentDate" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ProviderId">Доставчик</label>
                <select class="form-control">
                    @foreach (var provider in Model.Providers)
                    {
                        <option value="@provider.Id">@provider.Name : ID @provider.Number</option>
                    }
                </select>
                <span>
                    <a asp-controller="Storekeeper" asp-action="AddProvider" class="btn btn-sm btn-outline-primary">Добави нов доставчик</a>
                </span>
            </div>
            <div class="form-group">
                <label asp-for="WarehouseId">В склад</label>
                <select class="form-control">
                    @foreach (var warehouse in Model.Warehouses)
                    {
                        <option value="@warehouse.Id">@warehouse.Name</option>
                    }
                    <option>5</option>
                </select>
                <span>
                    <a asp-controller="BaseData" asp-action="AddWarehouse" class="btn btn-sm btn-outline-primary">Добави нов склад</a>
                </span>
            </div>
            <div class="form-group col-4 h-100">
                <h3>Материали</h3>
                <label asp-for="MaterialId">Име на материал</label>
                <select asp-for="MaterialId" class="form-control" size="10">
                    @foreach (var material in Model.Materials)
                    {
                        <option value="@material.Id">@material.Name</option>

                    }
                </select>
                <span>
                    <a asp-controller="Storekeeper" asp-action="AddMaterial" class="btn btn-sm btn-outline-primary">Добави нов материал</a>
                </span>
            </div>

            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>
