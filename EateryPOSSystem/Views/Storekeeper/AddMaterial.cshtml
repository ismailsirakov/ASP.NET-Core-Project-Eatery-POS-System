@model AddMaterialFormModel

@{ 
    ViewData["Title"] = "Add Material";
}

<div class="row">
    <div class="col-sm-12 offset-lg-3 col-lg-6 offset-xl-4 col-xl-4">
        <form method="post">
            <h2 class="text-center">Добави материал</h2>

            <div class="form-group">
                <label asp-for="Name">Име на материала</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeasurementId">Мерна единица на материала</label>
                <select asp-for="MeasurementId" class="form-control">
                    @foreach (var measurement in Model.Measurements)
                    {
                        <option value="@measurement.Id">@measurement.Name</option>
                    }
                </select>
                <span>
                    <a asp-controller="BaseData" asp-action="AddMeasurement" class="btn btn-sm btn-outline-primary">Добави нова мерна единица</a>
                </span>
            </div>

            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>
