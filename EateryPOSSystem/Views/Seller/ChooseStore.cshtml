@model ChooseStoreFormModel

@{
    ViewData["Title"] = "Choose A Store";
}

<div class="row">
    <div class="col-sm-12 offset-lg-3 col-lg-6 offset-xl-4 col-xl-4">
        <form method="post">
            <h2 class="text-center font-weight-bold text-primary">Избери обект</h2>

            <div class="form-group">
                <select asp-for="StoreId" class="form-control">
                    @foreach (var store in Model.Stores)
                    {
                        <option value="@store.Id">@store.Name</option>
                    }
                </select>
            </div>
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Продължи" />
            </div>
        </form>
    </div>
</div>
