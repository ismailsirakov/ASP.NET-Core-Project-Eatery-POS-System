@model AddProductToStoreFormModel

@{
    ViewData["Title"] = "Add Product";
}

<div class="row">
    <div class="col-sm-12 offset-lg-3 col-lg-6 offset-xl-4 col-xl-4">
        <form method="post">
            <h2 class="text-center">Добави продукт към обект</h2>
            <div class="form-group">
                <label asp-for="StoreId">Избери обект</label>
                <select asp-for="StoreId" class="form-control">
                    @foreach (var store in Model.Stores)
                    {
                    <option value="@store.Id">@store.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProductId">Вид продукт</label>
                <select asp-for="ProductId" class="form-control">
                    @foreach (var product in Model.Products)
                    {
                    <option value="@product.Id">@product.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MeasurementId">Мерна единица</label>
                <select asp-for="MeasurementId" class="form-control">
                    @foreach (var measurement in Model.Measurements)
                    {
                    <option value="@measurement.Id">@measurement.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity">Количество</label>
                <input asp-for="Quantity" class="form-control">
                <span asp-validation-for="Quantity" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Единична цена</label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Добави" />
            </div>
        </form>
    </div>
</div>
