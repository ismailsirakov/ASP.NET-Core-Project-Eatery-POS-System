@model AddRecipeFormModel

@{
    ViewData["Title"] = "Add Recipe";
}

<div>
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-2 col-xl-8">
        <div class="row mt-2 mb-2 col-10 text-center">
            <h3 class="text-dark text-center">Добавяне на рецепта </h3>
        </div>
        <form method="post">
            <div class="row">
                <div class="form-group col-2">
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <select asp-for="ProductId" class="form-control">
                        @foreach (var product in Model.Products)
                        {
                            <option value="@product.Id">
                                @product.Id   -  @product.Name
                            </option>
                        }
                    </select>
                </div>
            </div>
            <div class="text-center">
                <input class="btn btn-primary m-1" type="submit" value="Запази документ" />
            </div>
        </form>
    </div>
</div>
