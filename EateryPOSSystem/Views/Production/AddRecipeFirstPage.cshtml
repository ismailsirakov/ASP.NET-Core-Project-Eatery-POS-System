@model AddRecipeFormModel

@{
    ViewData["Title"] = "Add Recipe";
}

<div>
    <div class="col-sm-12 offset-lg-3 col-lg-6 offset-xl-4 col-xl-4">
        <form method="post">
            <h3 class="text-center">Добавяне на рецепта </h3>
            <div class="form-group">
                <label asp-for="Name">Име на рецептата</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreProductId">За кой продукт</label>
                <select asp-for="StoreProductId" class="form-control">
                    @foreach (var storeProduct in Model.StoreProducts)
                    {
                        <option value="@storeProduct.Id">
                            @storeProduct.StoreName   -  @storeProduct.ProductName
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="WarehouseId">За кой продукт</label>
                <select asp-for="WarehouseId" class="form-control">
                    @foreach (var warehouse in Model.Warehouses)
                    {
                        <option value="@warehouse.Id">
                            @warehouse.Id   -  @warehouse.Name
                        </option>
                    }
                </select>
            </div>
            <div class="text-center">
                <input class="btn btn-primary m-1" type="submit" value="Следваща страница" />
            </div>
        </form>
    </div>
</div>
