@model AddProductFormModel

@{
    ViewData["Title"] = "Add Product";
}

<div class="row">
    <div class="col-sm-12 offset-lg-3 col-lg-6 offset-xl-4 col-xl-4">
        <form method="post">
            <h2 class="text-center">Добави продукт</h2>
            <div class="form-group">
                <label asp-for="Name">Име на продукта</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductTypeId">Избери тип продукт</label>
                <select asp-for="ProductTypeId" class="form-control">
                    @foreach (var productType in Model.ProductTypes)
                    {
                        <option value="@productType.Id">@productType.Name</option>
                    }
                </select>
            </div>
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Добави" />
            </div>
        </form>
    </div>
</div>
