@model AddRecipeFormModel

@{
    ViewData["Title"] = "Add Recipe";
}

<div>
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-2 col-xl-8">
        <div class="row mt-2 mb-2 col-10 text-center">
            <h3 class="text-dark text-center">Добавяне на рецепта </h3>
        </div>
        <div class="row mt-2 mb-2 col-10 text-center">
            <h4 class="text-dark text-center">@Model.RecipeInfo</h4>
        </div>
        <form method="post">
            <div style="overflow-x: auto">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 34%;" class="text-center">
                                Име на материала
                            </th>
                            <th style="width: 17%;" class="text-center">
                                М.ед.
                            </th>
                            <th style="width: 15%;" class="text-center">
                                Количество
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var material in Model.AddedMaterialsToRecipe)
                        {
                            <tr>
                                <td>
                                    @material.Name
                                </td>
                                <td class="text-center">
                                    @material.MeasurementName
                                </td>
                                <td class="text-right">
                                    @material.MaterialQuantity.ToString("#,##0.000")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="form-group col-6">
                    <select asp-for="MaterialId" class="form-control">
                        @foreach (var material in Model.Materials)
                        {
                            <option value="@material.Id">
                                @material.Name   -  @material.MeasurementName
                            </option>
                        }
                    </select>
                </div>
                <div class="form-group col-2">
                    <input asp-for="MaterialQuantity" class="form-control">
                    <span asp-validation-for="MaterialQuantity" class="small text-danger"></span>
                </div>
                <div class="col-2 mt-2 mb-5">
                    <input class="btn btn-outline-primary h-75" name="addButton" type="submit" value="Добави материала към рецептата" />
                </div>
            </div>
            <div class="text-center">
                <input class="btn btn-primary m-1" type="submit" value="Запази рецептата" />
            </div>
        </form>
    </div>
</div>
