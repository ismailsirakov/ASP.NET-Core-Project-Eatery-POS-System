@model CloseBillFormModel

@{
    ViewData["Title"] = "Bill Details";
}

<div class="row">
    <div class="col-sm-12 offset-lg-3 col-lg-6 offset-xl-3 col-xl-6">
        <partial name="_BillPartial" model="@Model" />
        <div class="border">
            <div>
                <div class="text-right m-2">
                    <h6>Общо @Model.TotalSum.ToString("#,##0.00") лв.</h6>
                </div>
                <div class="text-left">
                    <h6 class="text-danger">Неприключена сметка</h6>
                </div>
            </div>
        </div>
        <div class="m-2">
            <a asp-controller="Seller" asp-action="Table" class="btn btn-outline-secondary btn-block">Назад</a>
        </div>
        <div class="m-2">
            <a asp-controller="Seller" asp-action="AddSoldProductToBill" class="btn btn-outline-primary btn-block">Нова поръчка</a>
        </div>
        <div class="m-2">
            <a asp-controller="Bill" asp-action="CloseBill" class="btn btn-outline-success btn-block">Приключи сметка</a>
        </div>
    </div>
</div>
